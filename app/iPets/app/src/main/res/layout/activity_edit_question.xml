<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".editQuestionActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0071BC"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <Button
        android:id="@+id/button_q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_click"
        android:gravity="start|center_horizontal|center_vertical"
        android:paddingHorizontal="17dp"
        android:stateListAnimator="@null"
        android:text="@string/buton_bug"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/button_q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_click"
        android:gravity="start|center_horizontal|center_vertical"
        android:paddingHorizontal="17dp"
        android:stateListAnimator="@null"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="@string/button_403" />

    <Button
        android:id="@+id/button_q3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_click"
        android:gravity="start|center_horizontal|center_vertical"
        android:paddingHorizontal="17dp"
        android:stateListAnimator="@null"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="@string/button_register" />

    <Button
    android:id="@+id/button_q4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/btn_click"
    android:gravity="start|center_horizontal|center_vertical"
    android:paddingHorizontal="17dp"
    android:stateListAnimator="@null"
    android:textColor="#000000"
    android:textSize="18sp"
    android:text="@string/button_how" />

    <Button
        android:id="@+id/button_q5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_click"
        android:gravity="start|center_horizontal|center_vertical"
        android:paddingHorizontal="17dp"
        android:stateListAnimator="@null"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="@string/button_why" />

    <Button
        android:id="@+id/button_q6"
        android:layout_width="match_parent"
